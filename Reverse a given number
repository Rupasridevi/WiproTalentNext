import java.util.*;
class Pattern {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("enter the number");
        int n = sc.nextInt();
        int rev = 0, num;
        while (n != 0) {
            num = n % 10;
            rev = rev * 10 + num;
            n = n / 10;
        }
        System.out.print("the rev num is " + rev);
    }
}
